---
import type { CollectionEntry } from 'astro:content';
import { Image } from "astro:assets";
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import type { ImageMetadata } from 'astro';

interface Props {
	date?: string;
	image: ImageMetadata;
	title: string;
	description: string;
	slug: string;
}

const { title, description, image, date } = Astro.props;

---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main id="main" class="container p-8 mx-auto mb-4">
			<article>
				<div class="hero-image mb-2">
					<Image width={1020} height={510} src={image} alt="" class="aspect-video object-cover" />
				</div>
				<div class="prose">
					<div class="date text-sm mb-4">
						{date && <FormattedDate date={date} />}
					</div>
					<h1>{title}</h1>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
